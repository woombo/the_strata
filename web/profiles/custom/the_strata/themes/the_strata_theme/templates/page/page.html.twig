{#
/**
 * @file
 * The Strata Theme's implementation to display a single Drupal page.
 *
 * Extends TheStrataTheme's page template with a custom site header.
 */
#}
{% set page_title_block = active_admin_theme ~ '_page_title' %}
{% set local_actions_block = active_admin_theme ~ '_local_actions' %}

{# Custom Strata Header #}
<header class="strata-header">
  <div class="strata-header__inner">
    <a href="{{ path('<front>') }}" class="strata-header__branding" rel="home">
      {% if logo_url %}
        <img src="{{ logo_url }}" alt="{{ site_name }}" class="strata-header__logo" />
      {% endif %}
      {% if site_name %}
        <span class="strata-header__site-name">{{ site_name }}</span>
      {% endif %}
    </a>
  </div>
</header>

{% if active_core_navigation %}
  <header class="region gin--navigation-top-bar--offset {{ the_strata_theme_form_actions_class }}">
    <div class="layout-container region-sticky__items">
      <div class="region-sticky__items__inner">
        {{ page.header[page_title_block] }}
        {% if not active_core_navigation %}
          {{ page.content[local_actions_block] }}
        {% endif %}
        {{ the_strata_theme_form_actions }}
      </div>
    </div>
  </header>
{% else %}
  <div class="gin-secondary-toolbar layout-container">
    <div class="gin-breadcrumb-wrapper">
    {% if route_name == 'entity.node.canonical' %}
      <div class="region region-breadcrumb gin-region-breadcrumb">
        <nav class="breadcrumb" role="navigation" aria-labelledby="system-breadcrumb">
          <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
          <ol class="breadcrumb__list">
            <li class="breadcrumb__item">
              {% if entity_edit_url and entity_title %}
                <a class="breadcrumb__link gin-back-to-admin" href="{{ entity_edit_url }}">{{ 'Edit %title'|t({ '%title': entity_title }) }}</a>
              {% else %}
                <a class="breadcrumb__link gin-back-to-admin" href="{{ path('system.admin_content') }}">{{ 'Back to Administration'|t }}</a>
              {% endif %}
            </li>
          </ol>
        </nav>
      </div>
    {% else %}
      {{ page.breadcrumb }}
    {% endif %}
    </div>
    {{ page.the_strata_theme_secondary_toolbar }}
  </div>

  <div class="region-sticky-watcher"></div>

  <header class="region region-sticky {{ the_strata_theme_form_actions_class }}">
    <div class="layout-container region-sticky__items">
      <div class="region-sticky__items__inner">
        {{ page.header[page_title_block] }}
        {% if not active_core_navigation %}
          {{ page.content[local_actions_block] }}
        {% endif %}
        {{ the_strata_theme_form_actions }}
      </div>
    </div>
  </header>

  <div class="sticky-shadow"></div>
{% endif %}

<div class="content-header clearfix">
  <div class="layout-container">
    {{ page.header|without(page_title_block) }}
  </div>
</div>

<div class="layout-container">
  {{ page.pre_content }}
  <main class="page-content clearfix" role="main">
    <div class="visually-hidden"><a id="main-content" tabindex="-1"></a></div>
    {{ page.highlighted }}
    {% if page.help %}
      <div class="help">
        {{ page.help }}
      </div>
    {% endif %}
    {{ page.content|without(local_actions_block) }}
  </main>
</div>
